<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bd.ac.ruet.memorychallenge.gameOverActivity"
    android:background="@color/accent_material_light">

    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/game_over"
        android:id="@+id/textView_game_over"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/btn"
        android:gravity="center"
        android:layout_above="@+id/textView_your_score"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0points"
        android:id="@+id/textView_final_score"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_score"
        android:id="@+id/textView_your_score"
        android:layout_above="@+id/textView_final_score"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_about_score"
        android:id="@+id/textView_scoreDescription"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_final_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/main_menu"
        android:drawableLeft="@drawable/menu"
        android:id="@+id/button_g_main_menu"
        android:background="@drawable/btn_green"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@+id/textView_scoreDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:onClick="onClick_mainMenu (gameOverActivity)" />

</RelativeLayout>
